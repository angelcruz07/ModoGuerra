---
import { marked } from "marked";

const { content } = Astro.props;

const contentHtml = marked.parse(content);
---

<article
  class="mt-10 flex w-auto max-w-96 justify-center p-5 md:w-full md:max-w-4xl"
>
  <div
    class="prose dark:prose-invert text-white prose-headings:text-red-600 prose-h1:capitalize prose-h1:font-bold prose-h1:text-2xl prose-p:text-justify prose-img:rounded-xl prose-headings:
    w-full"
    set:html={contentHtml}
  />
</article>

<style is:global>
  .video-responsive {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    max-width: 100%;
    margin: 0 auto;
  }

  .video-responsive iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  @media (max-width: 400px) {
    .video-responsive {
      width: 280px;
    }
  }
</style>
