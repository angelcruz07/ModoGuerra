---
import PostCard from "../postcard/PostCard.astro";
import { type Post } from "@interfaces";

const { posts } = Astro.props;
---

<section class="mt-10">
  <div class="mt-5 grid grid-cols-1 gap-10 md:grid-cols-2 lg:grid-cols-3">
    {posts?.map((post: Post) => <PostCard post={post} />)}
  </div>
</section>
