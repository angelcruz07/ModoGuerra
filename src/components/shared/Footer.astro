          <span class="inline-flex items-center gap-1 rounded-full border border-accent-hover/40 bg-primary/50 px-3 py-1 text-xs font-semibold text-accent-hover backdrop-blur-sm">
            <div class="h-1.5 w-1.5 rounded-full bg-accent-hover animate-pulse" style="animation-delay: 0.2s"></div>
            Comunidad
          </span>
        </div>
      </div>

      {/* Navigation */}
      <div class="scale-in stagger-1">
        <h3 class="mb-6 flex items-center gap-2 text-lg font-bold">
          <div class="h-1 w-1 rounded-full bg-secondary"></div>
          NavegaciÃ³n
        </h3>
        <ul class="space-y-3 text-sm">
          {
            ROUTES_NAV.map((link) => (
              <li class="group">
                <Link
                  href={link.path}
                  className="text-neutral-400 hover:text-secondary transition-all duration-300 flex items-center gap-2 group-hover:translate-x-1"
                >
                  <svg class="h-3 w-3 opacity-0 group-hover:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {link.name}
                </Link>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Community */}
      <div class="scale-in stagger-2">
        <h3 class="mb-6 flex items-center gap-2 text-lg font-bold">
          <div class="h-1 w-1 rounded-full bg-secondary"></div>
          Comunidad
        </h3>
        <ul class="space-y-3 text-sm">
          {
            communityLinks.map((link) => (
              <li class="group">
                <Link
                  href={link.href}
                  className="text-neutral-400 hover:text-secondary transition-all duration-300 flex items-center gap-2 group-hover:translate-x-1"
                >
                  <svg class="h-3 w-3 opacity-0 group-hover:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 20 20">
