---
import Heading from "@components/heading/Heading.astro";
import PostCard from "@components/post/postcard/PostCard.astro";
import Text from "@components/text/Text.astro";
import { type Post } from "@interfaces";

const { data } = Astro.props;
let { posts } = data as unknown as { posts: Post[] };

posts = posts.slice(0, 3);
---

<section class="flex flex-col items-center gap-y-10 text-center my-20">
  <div class="fade-in-up">
    <Heading component="h2" fontSize="medium" color="accent">
      Últimos Posts
    </Heading>
    <div class="mx-auto mt-2 h-1 w-20 rounded-full bg-gradient-to-r from-secondary to-accent-hover"></div>
    <Text className="mt-4 text-neutral-400">
      Explora los últimos posts de nuestro blog
    </Text>
  </div>

  <div class="mt-12 flex flex-col gap-10 md:flex-row">
    {posts.map((post) => <PostCard post={post} />)}
  </div>
</section>
