---
import { actions } from "astro:actions";
import Heading from "@components/heading/Heading.astro";
import Text from "@components/text/Text.astro";
import Pagination from "@components/shared/Pagination.astro";

const { data } = await Astro.callAction(actions.category.getCategories, {});
const todasLasCategorias = data || [];

// Configuración de paginación
const CATEGORIAS_POR_PAGINA = 8;
const url = new URL(Astro.request.url);
const paginaActual = parseInt(url.searchParams.get("page") || "1");
const totalPaginas = Math.ceil(todasLasCategorias.length / CATEGORIAS_POR_PAGINA);

// Calcular índices para la página actual
const inicio = (paginaActual - 1) * CATEGORIAS_POR_PAGINA;
const fin = inicio + CATEGORIAS_POR_PAGINA;
const categorias = todasLasCategorias.slice(inicio, fin);

// Iconos SVG para diferentes categorías (puedes personalizar según tus categorías)
const getCategoryIcon = (index: number) => {
  const icons = [
    '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />', // Idea/Bombilla
    '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />', // Libro
    '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />', // Código
    '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />', // Rayo/Productividad
    '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />', // Monitor/Tech
    '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />', // Dinero/Finanzas
    '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />', // Salud/Bienestar
    '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />', // Global/Mundial
  ];
  return icons[index % icons.length];
};

// Calcular el índice real de la categoría para el icono
const getGlobalIndex = (localIndex: number) => {
  return inicio + localIndex;
};
---

<section
  id="categories"
  class="relative my-20 px-5 md:px-10 lg:px-20 xl:px-32 2xl:px-40"
>
  <!-- Fondo decorativo -->
  <div class="absolute inset-0 overflow-hidden opacity-30">
    <div class="absolute top-0 right-1/4 h-96 w-96 rounded-full bg-secondary/10 blur-3xl"></div>
    <div class="absolute bottom-0 left-1/4 h-96 w-96 rounded-full bg-accent/10 blur-3xl"></div>
  </div>

  <div class="relative z-10">
    <!-- Header -->
    <div class="text-center fade-in-up mb-16">
      <div class="inline-flex items-center gap-2 mb-4">
        <div class="h-px w-8 bg-gradient-to-r from-transparent to-secondary"></div>
        <svg class="h-6 w-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
        </svg>
        <div class="h-px w-8 bg-gradient-to-l from-transparent to-secondary"></div>
      </div>

      <Heading component="h2" fontSize="medium" color="accent">
        Explora por Categorías
      </Heading>
      <div class="mx-auto mt-3 h-1 w-24 rounded-full bg-gradient-to-r from-secondary via-accent-hover to-secondary"></div>
      <Text className="mt-6 text-neutral-400 max-w-2xl mx-auto">
        Descubre contenido organizado por temas. Encuentra exactamente lo que necesitas para tu #ModoGuerra
      </Text>
    </div>

    <!-- Grid de Categorías -->
    <div
      class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4"
    >
      {
        categorias?.map((categoria, index) => (
          <a
            href={`/blog/?&category=${categoria.id}`}
            class="scale-in group relative overflow-hidden rounded-2xl border border-secondary/30 bg-gradient-to-br from-slate-800/80 via-complementary/90 to-accent/30 p-6 shadow-xl backdrop-blur-sm transition-all duration-500 hover:-translate-y-2 hover:border-secondary/60 hover:shadow-2xl hover:shadow-secondary/40"
            style={`animation-delay: ${index * 0.05}s`}
          >
            {/* Patrón de fondo decorativo */}
            <div class="absolute inset-0 opacity-5">
              <div class="h-full w-full" style="background-image: radial-gradient(circle, #f00404 1px, transparent 1px); background-size: 20px 20px;"></div>
            </div>

            {/* Contenido */}
            <div class="relative z-10 flex flex-col items-center text-center space-y-4">
              {/* Icono de categoría */}
              <div class="relative">
                <div class="flex h-16 w-16 items-center justify-center rounded-2xl border-2 border-secondary/40 bg-gradient-to-br from-complementary to-accent/40 shadow-lg transition-all duration-500 group-hover:border-secondary group-hover:rotate-6 group-hover:scale-110 group-hover:shadow-2xl group-hover:shadow-secondary/40">
                  <svg 
                    class="h-8 w-8 text-secondary transition-all duration-500 group-hover:scale-110" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                    set:html={getCategoryIcon(getGlobalIndex(index))}
                  />
                </div>
                {/* Anillo pulsante */}
                <div class="absolute inset-0 -m-1 rounded-2xl border-2 border-secondary/20 opacity-0 transition-opacity duration-500 group-hover:opacity-100 group-hover:animate-ping" style="animation-duration: 1.5s;"></div>
              </div>

              {/* Nombre de la categoría */}
              <div class="space-y-2">
                <h3 class="text-lg font-bold text-gray-100 transition-all duration-300 group-hover:text-secondary group-hover:scale-105">
                  {categoria.name}
                </h3>
                
                {/* Línea decorativa animada */}
                <div class="flex justify-center gap-1">
                  <div class="h-1 w-8 rounded-full bg-gradient-to-r from-secondary to-accent-hover transition-all duration-300 group-hover:w-12"></div>
                  <div class="h-1 w-2 rounded-full bg-secondary opacity-0 transition-all duration-300 group-hover:opacity-100 group-hover:w-3"></div>
                </div>
              </div>

              {/* Badge de "Ver más" */}
              <div class="flex items-center gap-2 opacity-0 transition-all duration-300 group-hover:opacity-100">
                <span class="text-xs font-semibold text-secondary">Ver artículos</span>
                <svg class="h-4 w-4 text-secondary transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </div>

            {/* Efectos de resplandor */}
            <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-secondary/0 via-secondary/0 to-accent-hover/0 opacity-0 transition-all duration-500 group-hover:from-secondary/10 group-hover:via-accent/10 group-hover:to-accent-hover/10 group-hover:opacity-100"></div>
            
            {/* Borde brillante animado */}
            <div class="absolute inset-0 rounded-2xl opacity-0 transition-opacity duration-500 group-hover:opacity-100" style="background: linear-gradient(90deg, transparent, rgba(240, 4, 4, 0.4), transparent); background-size: 200% 100%; animation: shimmer 3s infinite;">
            </div>

            {/* Elementos decorativos flotantes */}
            <div class="absolute top-2 right-2 h-2 w-2 rounded-full bg-secondary/40 opacity-0 transition-all duration-500 group-hover:opacity-100 group-hover:animate-pulse"></div>
            <div class="absolute bottom-2 left-2 h-1.5 w-1.5 rounded-full bg-accent-hover/40 opacity-0 transition-all duration-500 group-hover:opacity-100 group-hover:animate-pulse" style="animation-delay: 0.2s"></div>
          </a>
        ))
      }
    </div>

    {/* Paginación */}
    {totalPaginas > 1 && (
      <div class="mt-12">
        <Pagination totalPages={totalPaginas} />
      </div>
    )}

    {/* Call to action adicional */}
    <div class="mt-12 text-center fade-in-up">
      <Text className="text-sm text-neutral-500 italic">
        ¿No encuentras lo que buscas? <a href="/blog" class="text-secondary hover:text-accent-hover transition-colors font-semibold">Explora todos los artículos</a>
      </Text>
    </div>
  </div>
</section>

<style>
  @keyframes shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }
</style>
