---
import { Image } from "astro:assets";
import Heading from "../heading/Heading.astro";
import AuthButton from "./AuthButton.astro";
import Text from "../text/Text.astro";
import Link from "../link/Link.astro";
import DiscordIcon from "@icons/auth/discord.svg";

interface Props {
  title: string;
  footerText: string;
  textOauthProvider: string;
  link: {
    href: string;
    text: string;
  };
}

const { title, footerText, link, textOauthProvider } = Astro.props;
---

<div
  class="shadow-accent bg-complementary flex max-w-96 flex-col items-center gap-y-5 rounded-2xl p-10 shadow-lg"
>
  <Image
    src="/logos/devi-normal.png"
    alt="Una descripciÃ³n de mi imagen."
    width="100"
    height="100"
    class="drop-shadow-accent drop-shadow-lg"
  />

  <Heading className="text-center" color="text-white" fontSize="large">
    {title}
  </Heading>

  <AuthButton text={textOauthProvider} icon={DiscordIcon} />

  <div class="flex gap-x-5">
    <Text fontSize="small">{footerText}</Text>
    <Link href={link.href} className="text-sm" colorScheme="secondary"
      >{link.text}</Link
    >
  </div>
</div>
