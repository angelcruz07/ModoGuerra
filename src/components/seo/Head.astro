---
import { Font } from "astro:assets";

const { title, description } = Astro.props;
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="description" content={description} />
  <meta name="robots" content="follow, index" />
  <meta
    property="og:image"
    content="https://res.cloudinary.com/dlklqucye/image/upload/v1760310621/modoguerra/posts/all/image_vkcqln.png"
  />
  <link rel="icon" type="image/svg+xml" href="/logos/logo.webp" />

  <title>{title}</title>

  <Font cssVariable="--font-raleway" preload />
  <Font cssVariable="--font-space-mono" preload />
</head>
